<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codomotive.haminibarlogin.MainSettingsLogin"
    android:background="@color/material_deep_teal_500">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Admin, Please Log in to manage the refregerator"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User Name"
            android:id="@+id/usernamelabel"
            android:layout_marginTop="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="22dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/admin_user_name"
            android:layout_below="@+id/usernamelabel"
            android:layout_centerHorizontal="true"
            android:hint="Enter Your Username"
            android:gravity="center_vertical|center_horizontal"
            android:text="admin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Password"
            android:id="@+id/textView9"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/admin_user_name"
            android:layout_alignStart="@+id/usernamelabel"
            android:textSize="22dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/admin_password"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Enter Your Password"
            android:text="123456" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:id="@+id/admin_login"
            android:layout_below="@+id/admin_password"
            android:layout_alignStart="@+id/admin_password" />
    </RelativeLayout>
</RelativeLayout>
